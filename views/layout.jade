  body
    header.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#tna-navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') TestNodeAdmin
        #tna-navbar.navbar-collapse.collapse(sytle='height:1px;')
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li
              a(href='/pending', title='Pending Tasks ') Pending
            li
              a(href='/history', title='History of Tasks') History
            li
              a(href='/statistic', title='Statistic Information of This Site') Statistic
            li
              a(href='/maintenance', title='Maintenance the test nodes') Maintenance
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown')
                | Settings
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(title='Settings the default values used in site') Default Values
          ul.nav.navbar-nav.navbar-right
            li
              a(title='Create New Task') New Task
    div.main-content.container(ng-controller='siteCtrl')
      block content
    footer.navbar.navbar-default.navbar-fixed-bottom(role='navigation')
